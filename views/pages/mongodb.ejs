<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.7.0/css/all.css' integrity='sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ' crossorigin='anonymous'>

    <title>Students</title>
  </head>
  <body>

    <header class="bg-info text-white p-4 mb-3">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <h1><i class="fas fa-user mb-3" style="font-size:36px ;color:white; margin-right:10px "></i>Student Records</h1>
          </div>
        </div>
      </div>
    </header>

    <div class="container">

      <div class="card card-body">

       <form class="form-inline mb-3" action="/mongodb/add" method="post">
          <input type="text" name="netid" class="form-control" placeholder="NetID" title="should start with letter">
          <input type="text" name="fname" class="form-control" placeholder="First Name" title="should contain only letters">
          <input type="text" name="lname" class="form-control" placeholder="Last Name" title="should contain only letters">
          <input type="email" name="email" class="form-control" placeholder="Email">
          <input type="text" name="contact" class="form-control" placeholder="Contact Number" title="should be 10 digit number">
          <br><br><br>
          <input type="submit" class="btn btn-dark" value="Add Student">

        </form>


      </div>



      <div class="card card-body">

        <table class="table table striped table-dark mt-3 ">

          <thead>
            <tr class="text-primary">
              <th>NetID</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>Contact</th>
              <th></th>
            </tr>
          </thead>


            <% articles.forEach(function(article){ %>
              <tbody>
              <td><%= article.netid %></td>
              <td><%= article.fname %></td>
              <td><%= article.lname %></td>
              <td><%= article.email %></td>
              <td><%= article.contact %></td>
              <td><a class="btn btn-danger" href='/mongodb/delete/<%=article._id%>' role="button">Delete</a></td>
              </tbody>
            <% })%>


        </table>

      </div>

    </div>


  </body>
</html>
